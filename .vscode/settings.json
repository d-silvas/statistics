{
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%.tex"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex ➞ biber ➞ pdflatex × 2",
            "tools": [
                "pdflatex",
                "biber",
                "pdflatex",
                // "pdflatex"
            ]
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex",
            ]
        },
        
    ],
    "workbench.iconTheme": "material-icon-theme",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [";"],
            "after": ["A", ";", "<Esc>"]
        }
    ],
    "files.eol": "\n",
    "latex-workshop.view.pdf.viewer": "tab",
    "python.pythonPath": "code\\venv\\Scripts\\python.exe"
}